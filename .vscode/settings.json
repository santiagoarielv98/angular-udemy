{
  "github.copilot.enable": {
    "*": false,
    "plaintext": false,
    "markdown": false,
    "scminput": false
  },
  "files.exclude": {
    "**/bases": true,
    "**/gifs-app": true,
    "**/country-app": true,
    "**/pipes-app": true,
    "**/heroes-app": true,
    "**/form-app": true,
    "**/selectores": true,
    "**/lifecycle": true,
    "**/map-app": true
  },
  "search.exclude": {
    "**/node_modules": true,
    "**/bower_components": true,
    "**/*.code-search": true,
    "bases": true,
    "gifs-app": true,
    "country-app": true,
    "pipes-app": true,
    "heroes-app": true,
    "form-app": true,
    "selectores": true,
    "lifecycle": true,
    "map-app": true,
    "directive-signals": false
  },
  "angular-schematics.schematicsDefaultOptions": {
    "angular-*": {
      "skipStyle": true,
      "externalTemplate": true
    },
    "angular-component": {
      "skipChangeDetectionOnPush": true
    }
  }
}
